<Page
    x:Class="App1.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">



    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel x:Name="NavPanel" HorizontalAlignment="Left" Height="710" VerticalAlignment="Top" Width="244" Background="#FF6BB954">
            <Button x:Name="MainMenuBtn" Content="Self Help" HorizontalAlignment="Left" Height="51" Margin="51,167,-124,-186" VerticalAlignment="Top" Width="138" FontSize="18" Click="SelfHelpBtnClick"/>
            <Button x:Name="AboutBtn" Content="About " HorizontalAlignment="Left" Height="51" Margin="51,263,-124,-282" VerticalAlignment="Top" Width="138" FontSize="18" Click="AboutBtnClick"/>
            <Button x:Name="InstructionsBtn" Content="Instructions" HorizontalAlignment="Left" Height="48" Margin="51,353,-124,-369" VerticalAlignment="Top" Width="138" FontSize="18" Click="InstructionBtnClick"/>
            <Button x:Name="InfoBtn" Content="Important&#xA;Information" HorizontalAlignment="Left" Height="70" Margin="51,446,-124,-484" VerticalAlignment="Top" Width="138" FontSize="18" Click="InfoBtnClick"/>
            <Button Content="Homepage" HorizontalAlignment="Left" Height="72" Margin="45,40,-124,-80" VerticalAlignment="Top" Width="144" Click="HomepageBtnClick" FontSize="22" FontWeight="Bold"/>
        </RelativePanel>

        <RelativePanel x:Name="ContextPanel" HorizontalAlignment="Left" Height="554" Margin="249,156,0,0" VerticalAlignment="Top" Width="1031"/>
        <RelativePanel HorizontalAlignment="Left" Height="156" Margin="244,0,0,0" VerticalAlignment="Top" Width="1026" BorderThickness="0.5,0.5,0.5,0.5">
            <TextBlock HorizontalAlignment="Left" Height="50" Margin="158,69,-663,-99" TextWrapping="Wrap" Text="Instructions for using Let It Go" VerticalAlignment="Top" Width="567" FontSize="36"/>
            <Image HorizontalAlignment="Left" Height="148" Margin="0,0,-153,-148" VerticalAlignment="Top" Width="153" Source="Assets/Let ItOut.jpg"/>
        </RelativePanel>
    </Grid>
</Page>
